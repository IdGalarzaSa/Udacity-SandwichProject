<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_image_height"
                android:adjustViewBounds="true"
                android:contentDescription="@string/sandwich_picture_content_description"
                android:scaleType="centerCrop" />

            <ProgressBar
                android:id="@+id/image_progressBar_pb"
                android:layout_width="@dimen/progress_bar_dimen"
                android:layout_height="@dimen/progress_bar_dimen"
                android:layout_gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/mainName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="8dp"
                android:textSize="@dimen/text_size_sandwich_name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/also_known_as_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tv_padding_top"
                android:text="@string/detail_also_known_as_label"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alsoKnownAs_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tv_padding_top"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tv_padding_top"
                android:text="@string/detail_ingredients_label"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ingredients_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tv_padding_top"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/place_of_origin_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/tv_padding_top"
                android:text="@string/detail_place_of_origin_label"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/placeOfOrigin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tv_padding_top"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tv_padding_top"
                android:text="@string/detail_description_label"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:paddingTop="@dimen/tv_padding_top"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="italic" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
